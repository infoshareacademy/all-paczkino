@using AllPaczkino.Repositories;
@model IEnumerable<AllPaczkino.Models.Parcel>

@{
    ViewData["Title"] = "Lista paczek";
}


<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="table-responsive" style="margin-top: 225px;">
    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Parcel Number</th>
                <th scope="col">Send Time</th>
                <th scope="col">Receive Time</th>
                <th scope="col">Parcel Status</th>
                <th scope="col">Sender</th>
                <th scope="col">Sender Locker</th>
                <th scope="col">Receiver</th>
                <th scope="col">Receiver Locker</th>
                <th scope="col">Parcel Size</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@Html.DisplayFor(modelItem => item.ID)</th>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.ParcelNumber)</td>
                    <td>@Html.DisplayFor(modelItem => item.SendTime)</td>
                    <td>@Html.DisplayFor(modelItem => item.ReceiveTime)</td>
                    <td>@Html.DisplayFor(modelItem => item.ParcelStatus)</td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Sender.ContactData.Name)<br />
                        @Html.DisplayFor(modelItem => item.Sender.ContactData.Email)<br />
                        @Html.DisplayFor(modelItem => item.Sender.ContactData.PhoneNumber)
                    </td>
                    <td>
                        Postal Code: @Html.DisplayFor(modelItem => item.SenderLocker.postal_code)<br />
                        City: @Html.DisplayFor(modelItem => item.SenderLocker.city)<br />
                        Address: @Html.DisplayFor(modelItem => item.SenderLocker.address)<br />
                        ID: @Html.DisplayFor(modelItem => item.SenderLocker.id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Receiver.ContactData.Name)<br />
                        @Html.DisplayFor(modelItem => item.Receiver.ContactData.Email)<br />
                        @Html.DisplayFor(modelItem => item.Receiver.ContactData.PhoneNumber)
                    </td>
                    <td>
                        Postal Code: @Html.DisplayFor(modelItem => item.ReceiverLocker.postal_code)<br />
                        City: @Html.DisplayFor(modelItem => item.ReceiverLocker.city)<br />
                        Address: @Html.DisplayFor(modelItem => item.ReceiverLocker.address)<br />
                        ID: @Html.DisplayFor(modelItem => item.ReceiverLocker.id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ParcelSize.Name)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
