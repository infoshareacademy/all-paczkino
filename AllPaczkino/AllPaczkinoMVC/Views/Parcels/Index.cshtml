@using AllPaczkino.Repositories;
@model IEnumerable<AllPaczkino.Models.Parcel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ParcelNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SendTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReceiveTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ParcelStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SenderLocker)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReceiverLocker)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ParcelNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SendTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReceiveTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ParcelStatus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SenderLocker.postal_code)
                    @Html.DisplayFor(modelItem => item.SenderLocker.city)
                    @Html.DisplayFor(modelItem => item.SenderLocker.address)

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReceiverLocker.postal_code)
                    @Html.DisplayFor(modelItem => item.ReceiverLocker.city)
                    @Html.DisplayFor(modelItem => item.ReceiverLocker.address)

                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id=item.ID  }) |
                    @Html.ActionLink("Details", "Details", new {  id=item.ID}) |
                    @Html.ActionLink("Delete", "Delete", new { id=item.ID})
                </td>
            </tr>
        }
    </tbody>
</table>
