<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AllPaczkinoMVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AllPaczkinoMVC.styles.css" asp-append-version="true" />
</head>

    
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-dark fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="~/images/all-paczkino-logo.png"/>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDarkDropdown" aria-controls="navbarNavDarkDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-evenly">
                <ul class="navbar-nav flex-grow-1">
                    <div class="btn-group">
                        <li class="nav-item dropdown">
                            <a asp-area="" asp-controller="AdminMenu" asp-action="Index">
                                <button type="button" class="btn btn-transparent">Admin Menu</button>
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" href="ParcelLockers">Lista paczkomatów</a>
                                <a class="dropdown-item" href="Parcels">Lista paczek</a>
                                <a class="dropdown-item" href="#">Lista użytkowników</a>
                            </div>
                        </li>
                    </div>
                    <div class="btn-group">
                        <li class="nav-item dropdown">
                        <a asp-area="" asp-controller="UserMenu" asp-action="Index">
                            <button type="button" class="btn btn-transparent">User Menu</button>
                            </a>
                            <div class="dropdown-menu btn btn-transparent" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" href="SendParcel/Create">Nadaj paczkę</a>
                                <a class="dropdown-item" href="Parcels">Lista paczek</a>
                                <a class="dropdown-item" href="#">Moje dane</a>
                                <a class="dropdown-item" href="ParcelStatus">Sprawdź status paczki</a>
                            </div>
                        </li>
                    </div>
                    <div class="btn-group">
                        <li class="nav-item dropdown">
                            <a asp-area="" asp-controller="UserMenu" asp-action="Index">
                            <button type="button" class="btn btn-transparent">Zaloguj się</button>
                            </a>
                            <div class="dropdown-menu btn btn-transparent" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" href="AdminMenu">Admin</a>
                            <a class="dropdown-item" href="UserMenu">User</a>
                            </div>
                        </li>
                    </div>
                    <div class="btn-group">
                        <li class="nav-item dropdown">
                        <button type="button" class="btn btn-transparent">O Firmie</button>
                                <div class="dropdown-menu btn btn-transparent" aria-labelledby="navbarDropdown">
                                    <a class="dropdown-item" href="Privacy">Prywatność</a>
                                    <a class="dropdown-item" href="#">Kontakt</a>
                                </div>
                        </li>
                    </div>
                </ul>
            </div>
        </div>
    </nav>
</header>
    <div class="container">
        @* <main role="main" class="pb-3"> *@
            @RenderBody()
        @* </main> *@
    </div>
<body>
        
        <img src="~/images/background-main.jpg" class="background-main" alt="background" />
</body>
    <footer class="border-0 footer text-muted">
        <div class="container">
            &copy; 2023 - AllPaczkinoMVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
